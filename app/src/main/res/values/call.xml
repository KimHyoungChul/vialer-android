<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Call colors -->
    <color name="call_text_color">@color/color_accent</color>

    <!-- Call Theme -->
    <style name="CallTheme" parent="@style/AppTheme">
        <item name="android:textViewStyle">@style/CallTextViewStyle</item>
    </style>

    <!-- TextView Style -->
    <style name="CallTextViewStyle" parent="android:style/Widget.Material.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/call_text_color</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CallHeaderTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CallHeaderSubtitleTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10sp</item>

    </style>

    <style name="CallHeaderDurationTextViewStyle" parent="@style/CallHeaderSubtitleTextViewStyle">
        <item name="android:background">@drawable/call_duration</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">1sp</item>
        <item name="android:paddingBottom">2sp</item>
    </style>


    <style name="CallHeaderContainerStyle" parent="@style/CallTextViewStyle">
    </style>

    <!-- TextView Style -->
    <style name="CallNameTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/call_name_text_size</item>
    </style>

    <!-- TextView Style -->
    <style name="CallLabelTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">@dimen/call_label_text_size</item>
        <item name="android:textColor">@color/call_color</item>
    </style>

    <!-- TextView Style -->
    <style name="CallNumberTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">@dimen/call_number_text_size</item>
    </style>

    <!-- TextView Style -->
    <style name="CallDurationTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">@dimen/call_duration_text_size</item>
    </style>

    <!-- TextView Style -->
    <style name="CallStateTextViewStyle" parent="@style/CallTextViewStyle">
        <item name="android:textSize">@dimen/call_state_text_size</item>
    </style>

    <style name="CallTransferStatusStyle" parent="@style/CallTextViewStyle">
        <item name="android:textColor">@color/call_text_color</item>
        <item name="android:textSize">@dimen/call_state_text_size</item>
    </style>
</resources>